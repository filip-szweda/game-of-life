<UserControl x:Class="game_of_life.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:game_of_life"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <TextBox Name="GridWidthTextBox" Width="150" Text="40" />
            <TextBox Name="GridHeightTextBox" Width="150" Text="40" />
            <Button Content="Generate Grid" Click="GenerateGridButton_Click" />
            <Button Content="Start Animation" Click="StartAnimationButton_Click" />
            <Button Content="Stop Animation" Click="StopAnimationButton_Click" />
            <Button Content="One Frame Forward" Click="OneFrameForwardButton_Click" />
        </StackPanel>
        <Grid Name="GameGrid" Margin="150,0,0,0"/>
    </Grid>
</UserControl>
